<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Branch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="form.css">
    <style>
        .center {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container text-center center">
        <table class="table table-striped border" style="max-width:400px;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Branch Name</th>
                    <th scope="col">Link</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0; i < displayData.length; i++ ) { %>
                    <tr>
                        <th scope="row">
                            <%= i+1 %>
                        </th>
                        <td>
                            <%= displayData[i].branch %>
                        </td>
                        <td>
                            <%= displayData[i].link %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form action="/addBranch" method="post" class="feedback1">
                    <h4 class="text-center feed-head">Add Branch</h4>
                    <div class="feedback">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Branch Name</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name="subName">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlInput2" class="form-label">Link</label>
                            <input type="text" class="form-control" id="exampleFormControlInput2" name="link">
                        </div>
                        <button class="btn btn-primary" type="submit">Add</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <form action="/deleteBranch" method="post" class="feedback1">
                    <h4 class="text-center feed-head">Delete Branch</h4>
                    <div class="feedback">
                        <div class="mb-3">
                            <label for="exampleFormControlInput3" class="form-label">Branch Name</label>
                            <input type="text" class="form-control" id="exampleFormControlInput3" name="subName">
                        </div>
                        <button class="btn btn-primary" type="submit">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>